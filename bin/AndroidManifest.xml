<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pickupgamefinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.pickupgamefinder.views.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pickupgamefinder.views.CreateGameActivity"
            android:label="@string/title_activity_create_game"
            android:parentActivityName="com.example.pickupgamefinder.views.MainActivity" >
        </activity>
        <activity android:name="com.example.pickupgamefinder.views.DisplayGameDetailsActivity" >
        </activity>
        <activity
            android:name="com.example.pickupgamefinder.views.DisplayGameDetailsActivity"
            android:label="@string/title_activity_display_game_details" >
        </activity>
    </application>

</manifest>
